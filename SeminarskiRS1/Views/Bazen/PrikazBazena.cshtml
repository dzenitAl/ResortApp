@{
    Layout = "~/Views/Shared/_LayoutPrikaz.cshtml";
}
@using SeminarskiRS1.ViewModels;
@model BazenPrikazVM

<main id="main">

    <!-- ======= Our Portfolio Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="padding-left:50px;">Bazen</h2>
                <ol style="padding-right:40px; font-size:14px">
                    <li><a href="/Home/Index">Početna</a></li>
                    <li>Bazen</li>
                </ol>
            </div>

        </div>
    </section><!-- End Our Portfolio Section -->
    <!-- ======= Service Details Section ======= -->
    <section class="service-details">

        <div class="portfolio">
            <div class="row">
                @if (Model.RolaID == 1)
                {
                    <div class="col-lg-12">
                        <div class="row col-md-12 text-center">
                            <button type="button" class="btn btn-primary btn-lg btn-block" onclick="window.location='/Bazen/EvidentirajBazen?BazenID=0'" style="margin-bottom:20px">Dodaj novi bazen</button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="container">

            <div class="row">
                @foreach (var x in Model.bazeni)
                {
                    <div class="col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <div class="card">
                            <div class="card-img">
                                <img src="~/Slike/@x.PutanjaDoSlike" alt="">
                            </div>
                            <div class="card-body">

                                <h4 class="text-center"> @x.NazivBazena </h4>
                                <p class="card-text" style="font-size:medium">@x.OpisBazena</p>
                                <div class="read-more"><a href="/Bazen/EvidentirajBazen?BazenID=@x.BazenId"><i class="bi bi-arrow-right"></i> Detalji</a></div><br />
                                @if (Model.RolaID == 1)
                                {
                                    <div class="d-flex justify-content-around">
                                        <button type="button" class="btn btn-danger btn-lg col-3" onclick="window.location = '/Bazen/ObrisiBazen?BazenID=@x.BazenId'">Obriši</button>
                                        <button type="button" class="btn btn-primary btn-lg col-3" onclick="window.location = '/Bazen/EvidentirajBazen?BazenID=@x.BazenId'">Uredi</button>
                                    </div>
                                }
                                @*else
                                {
                                    <br />
                                    <div class="d-flex justify-content-center">
                                        <button type="button" class="btn btn-success btn-lg col-3" onclick="window.location = '/Bazen/DodajURezervaciju?BazenId=@x.BazenId'">Rezerviši</button>
                                    </div>
                                }*@

                            </div>
                        </div>
                    </div>
                }
               
            </div>

        </div>
    </section><!-- End Service Details Section -->
</main>