@{
    Layout = "~/Views/Shared/_LayoutPrikaz.cshtml";

    var photoPath = "~/Slike/" + (@Model.PutanjaDoSlike ?? "add-image.png");
}
@using SeminarskiRS1.ViewModels
@model SalaEvidentirajVM


<main id="main">

    <!-- ======= Our Portfolio Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="padding-left:25px;">Dodaj novu salu</h2>
                <ol style="padding-right:40px; font-size:14px">
                    <li><a href="/Home/Index">Home</a></li>
                    <li><a href="/Sala/PrikazSala">Sale</a></li>
                    <li>Dodaj novu salu</li>
                </ol>
            </div>

        </div>
    </section><!-- End Our Portfolio Section -->

    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                @if (Model.RolaID == 1)
                {
                     <form enctype="multipart/form-data" asp-action="Snimi" asp-controller="Sala">

                     @*<div class="col-lg-8">
                        <div class="portfolio-details-slider swiper">
                            <div class="swiper-wrapper align-items-center">

                                <div class="swiper-slide">
                                    <h4>Dodaj slike sale</h4>
                                    <input multiple type="file" asp-for="SalaSlika" required class="form-control form-control-lg" id="formFileMultiple" />
                                    <span asp-validation-for="SalaSlika" class="text-danger"></span>
                                </div>
                                <div class="swiper-slide">
                                    <span asp-validation-for="SalaSlika" class="text-danger"></span>
                                    <img src="@photoPath" asp-append-version="true" asp-validation-for="SalaSlika" />
                                </div>
                            </div>
                            <div class="swiper-pagination"></div>
                           </div>
                        </div>*@
                     <div class="col-md-7 align-self-center" style="padding-right:0px;">
                        <div class="portfolio-info">
                            <h3>Sala slike</h3>
                            <input multiple type="file" asp-for="SalaSlika" class="form-control form-control-lg" id="formFileMultiple" style="font-size:17px;" />
                            <br />
                            <div class="portfolio-details-slider swiper">
                                <div class="swiper-wrapper align-items-center">
                                    @if (Model.PutanjaDoSlike != null)
                                    {
                                        <div class="swiper-slide">
                                            <img src="~/Slike/@Model.PutanjaDoSlike" asp-append-version="true" style="height:inherit" />
                                            <span asp-validation-for="SalaSlika" class="text-danger"></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="swiper-slide">
                                            <span asp-validation-for="SalaSlika" class="text-danger"></span>
                                            <img src="@photoPath" asp-append-version="true" asp-validation-for="SlikaSobe" />
                                        </div>
                                    }
                                </div>
                                <div class="swiper-pagination"></div>
                            </div>
                        </div>
                     </div>
                    <div class="col-lg-4">
                        <div class="portfolio-info">
                            <h3>Detalji o novoj sali</h3>
                            <div class="portfolio-info">

                                <div class="form-group row">
                                    <input asp-for="SalaID" value="@Model.SalaID" hidden />
                                </div>

                                <div class="form-group row input-group input-group-lg">
                                    <h4>Naziv sale</h4>
                                    <input type="text" asp-for="NazivSale" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" required>
                                </div>

                                <div class="form-group input-group row input-group-lg">
                                    <h4>Tip sale</h4>
                                    <select asp-for="SalaTipID" asp-items="@Model.SalaTipovi" required class="form-select-lg mb-4">
                                    </select>
                                </div>

                                <div class="form-group row input-group input-group-lg">
                                    <h4>Kapacitet sale</h4>
                                    <input type="text" asp-for="KapacitetSale" class="form-control" aria-describedby="inputGroup-sizing-lg" required>
                                </div>

                                <div class="form-group row input-group input-group-lg">
                                    <h4>Cijena sale</h4>
                                    <input type="text" asp-for="CijenaIznajmljivanjaSale" class="form-control" aria-describedby="inputGroup-sizing-lg" required>
                                </div>

                                <div class="form-group row input-group input-group-lg">
                                    <h4>Opis sale</h4>
                                    <textarea asp-for="OpisSale" required class="form-control" aria-label-="With textarea" style="height:100px"></textarea>
                                </div>
                            </div>
                            <input type="submit" value="Snimi" class="btn btn-primary btn-lg btn-block" />
                        </div>
                    </div>
                </form>
                }
                else
                {
                    <form enctype="multipart/form-data" asp-controller="Sala" class="row">

                        <div class="col-md-7 align-self-center" style="padding-right:0px;">
                            <div class="portfolio-info">
                                <h3>Wellnes slike</h3>
                                <div class="portfolio-details-slider swiper">
                                    <div class="swiper-wrapper align-items-center">
                                        <div class="swiper-slide">
                                            <img src="~/Slike/@Model.PutanjaDoSlike" asp-append-version="true" style="height:inherit" />
                                            <span asp-validation-for="SalaSlika" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5 align-self-center">
                            <div class="portfolio-info">
                                <h3>Informacije o Sali </h3>
                                <div class="portfolio-info">

                                    <div class="form-group">
                                        <input asp-for="SalaID" value="@Model.SalaID" hidden />
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Naziv sale </h4>
                                        <input type="text" asp-for="NazivSale" class="form-control form-control-lg" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" readonly style="font-size:17px;">
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Tip sale</h4>
                                        <input type="text" asp-for="SalaTipID" value="@Model.SalaTip2" required class="form-select-lg mb-4" readonly />
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Opis sale </h4>
                                        <textarea asp-for="OpisSale" readonly class="form-control form-control-lg" aria-label="With textarea" rows="10" style="height:auto; font-size:16px;"></textarea>
                                    </div>
                                    <div class="form-group row input-group input-group-lg">
                                        <h4>Kapacitet sale</h4>
                                        <input type="text" asp-for="KapacitetSale" class="form-control" aria-describedby="inputGroup-sizing-lg" readonly style="font-size:17px;">
                                    </div>

                                    <div class="form-group row input-group input-group-lg">
                                        <h4>Cijena sale</h4>
                                        <input type="text" asp-for="CijenaIznajmljivanjaSale" class="form-control" aria-describedby="inputGroup-sizing-lg" readonly style="font-size:17px;">
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <button type="button" class="btn btn-success btn-lg col-3" onclick="window.location = '/Sala/Rezervacija?SalaId=@Model.SalaID'">Napravi rezervaciju</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </section><!-- End Portfolio Details Section -->
</main>