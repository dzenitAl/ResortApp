@using SeminarskiRS1.ViewModels
@model SobaEvidentirajVM

@{
    var photoPath = "~/Slike/" + (@Model.PutanjaDoSlike ?? "add-image.png");
    var photoPath2 = "~/Slike/" + (@Model.PutanjaDoSlike ?? "pocetna.jpg");
    Layout = "~/Views/Shared/_LayoutPrikaz.cshtml";
}

<main id="main">

    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="padding-left:50px;">Detalji o sobi</h2>
                <ol style="padding-right:40px; font-size:14px;">
                    <li><a href="/Home/Index">Home</a></li>
                    <li><a href="/Soba/PrikazSoba">Sobe</a></li>
                    <li>Detalji o sobi</li>
                </ol>
            </div>

        </div>
    </section>
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row justify-content-center align-self-center">
                @if (Model.RolaID == 1)
                {
                    <form enctype="multipart/form-data" class="row" asp-action="Snimi" asp-controller="Soba">

                        <div class="col-md-7 align-self-center" style="padding-right:0px;">
                            <div class="portfolio-info">
                                <h4>Slike sobe</h4>
                                <input multiple type="file" asp-for="SobaSlike" required class="form-control form-control-lg" id="formFileMultiple" style="font-size:17px;" />
                                <div class="portfolio-details-slider swiper">
                                    <div class="swiper-wrapper align-items-center">
                                        @if (Model.PutanjaDoSlikaSobe != null)
                                        {
                                            @foreach (var x in Model.PutanjaDoSlikaSobe)
                                            {
                                                <div class="swiper-slide">
                                                    <img src="~/Slike/@x" asp-append-version="true" style="height:inherit" />
                                                    <span asp-validation-for="SobaSlike" class="text-danger"></span>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="swiper-slide">
                                                <span asp-validation-for="SobaSlike" class="text-danger"></span>
                                                <img src="@photoPath" asp-append-version="true" sp-validation-for="SobaSlike"/>
                                            </div>
                                        }
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-5 align-self-center">
                            <div class="portfolio-info">
                                <h3>Informacije o sobi</h3>
                                <div class="portfolio-info">

                                    <div class="form-group row">
                                        <input asp-for="SobaId" value="@Model.SobaId" hidden />
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Naziv sobe</h4>
                                        <input type="text" asp-for="NazivSobe" class="form-control form-control-lg" required style="font-size:17px;">
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Tip sobe</h4>
                                        <select asp-for="SobaTipID" asp-items="@Model.SobaTipovi" required class="form-select form-select-lg" style="font-size:17px;"></select>
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Opis sobe</h4>
                                        <textarea asp-for="OpisSobe" required class="form-control form-control-lg" rows="7" style="height:auto; font-size:17px;"></textarea>
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Cijena rezervacije sobe</h4>
                                        <input type="text" asp-for="Cijena" class="form-control form-control-lg" required style="font-size:17px;">
                                    </div>
                                </div>
                                <input type="submit" value="Snimi" class="btn btn-primary btn-lg btn-block" />
                            </div>
                        </div>

                    </form>
                }
                else
                {
                    <form enctype="multipart/form-data" class="row" asp-action="Snimi" asp-controller="SportskaAktivnost">

                        <div class="col-md-7 align-self-center" style="padding-right:0px;">
                            <div class="portfolio-info">
                                <h4>Slike sobe</h4>
                                <div class="portfolio-details-slider swiper">
                                    <div class="swiper-wrapper align-items-center">
                                        @if (Model.PutanjaDoSlikaSobe != null)
                                        {
                                            @foreach (var x in Model.PutanjaDoSlikaSobe)
                                            {
                                                <div class="swiper-slide">
                                                    <img src="~/Slike/@x" asp-append-version="true" style="height:inherit" />
                                                    <span asp-validation-for="SobaSlike" class="text-danger"></span>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="swiper-slide">
                                                <span asp-validation-for="SobaSlike" class="text-danger"></span>
                                                <img src="~/Slike/pocetna.jpg" class="img-fluid" asp-append-version="true" sp-validation-for="SobaSlike"/>
                                            </div>
                                        }
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-5 align-self-center">
                            <div class="portfolio-info">
                                <h3>Informacije o sobi</h3>
                                <div class="portfolio-info">

                                    <div class="form-group row">
                                        <input asp-for="SobaId" value="@Model.SobaId" hidden />
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Naziv sobe: </h4>
                                        <input type="text" asp-for="NazivSobe" class="form-control form-control-lg" readonly style="font-size:17px;">
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Tip sobe: </h4>
                                        <input type="text" asp-for="SobaTipID" value="@Model.SobaTip2" readonly class="form-control form-control-lg" style="font-size:17px;" />
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Opis sobe: </h4>
                                        <textarea asp-for="OpisSobe" readonly class="form-control form-control-lg" rows="7" style="height:auto; font-size:17px;"></textarea>
                                    </div>

                                    <div class="form-group input-group row input-group-lg">
                                        <h4>Cijena sobe: </h4>
                                        <input type="text" asp-for="Cijena" class="form-control form-control-lg" readonly style="font-size:17px;">
                                    </div>
                                    <br />
                                    <br />
                                    <div class="d-flex justify-content-center">
                                        <button type="button" class="btn btn-success btn-lg col-3" onclick="window.location = '/Soba/Rezervacija?SobaId=@Model.SobaId'">Napravi rezervaciju</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                }
            </div>

        </div>
    </section>

</main>



