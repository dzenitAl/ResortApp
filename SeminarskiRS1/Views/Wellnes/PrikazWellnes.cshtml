@using SeminarskiRS1.ViewModels;
@model WellnesPrikazVM

@{
    Layout = "~/Views/Shared/_LayoutPrikaz.cshtml";
}

<main id="main">
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="padding-left:50px;">Wellnes</h2>
                <ol style="padding-right:40px; font-size:14px">
                    <li><a href="/Home/Index">Početna</a></li>
                    <li>Wellnes</li>
                </ol>
            </div>

        </div>
    </section>
   
    <section class="service-details" style="padding-left:30px; padding-right:30px;">

        <div class="portfolio">
            <div class="row">
                <div class="col-lg-12">
                    @if (Model.RolaID == 1)
                    {
                        <div class="row col-lg-12 justify-content-center">
                            <button type="button" class="btn btn-primary  col-10 btn-block btn-lg" onclick="window.location='/Wellnes/EvidentirajWellnes?WellnesId=0'" style="margin-bottom:20px">Dodaj novi wellnes tretman</button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="container" >

            <div class="row justify-content-center pb-3" >
                @foreach (var x in Model.wellnes)
                {
                    <div class="col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <div class="card align-items-stretch">
                            <div class="card-img">
                                <img src="~/Slike/@x.PutanjaDoSlikeWellnes" alt="" >
                            </div>
                            <div class="card-body align-items-stretch">

                                <h3 class="text-center"> @x.TipWellnes </h3>
                                <p class="card-text" style="font-size:medium">@x.OpisPrograma</p>

                                <div class="read-more"><a href="/Wellnes/EvidentirajWellnes?WellnesId=@x.WellnesId" style="font-size:medium;"><i class="bi bi-arrow-right" style="color:black; font-size:large;"></i> Detalji</a></div><br />

                                @if (Model.RolaID == 1)
                                {
                                    <div class="d-flex justify-content-around">
                                        <button type="button" class="btn btn-danger btn-lg col-3" onclick="window.location = '/Wellnes/ObrisiWellnes?WellnesId=@x.WellnesId'">Obriši</button>
                                        <button type="button" class="btn btn-primary btn-lg col-3" onclick="window.location = '/Wellnes/EvidentirajWellnes?WellnesId=@x.WellnesId'">Uredi</button>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section>
</main>


    
  
  